{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://mozilla.ch/schemas/content-queue-config.json",
    "title": "Content Queue Config Schema",
    "type": "array",
    "items": {
        "title": "Instances of the tool",
        "type": "object",
        "properties": {
            "repo": {
                "type": "string",
                "pattern": "^[^/]+/[^/]+$"
            },
            "githubToken": {
                "type": "string",
                "minLength": 3
            },
            "projectName": {
                "type": "string",
                "minLength": 1
            },
            "labels": {
                "title": "Label names for labels used by the queue",
                "type": "object",
                "properties": {
                    "retweet": {
                        "type": "string",
                        "minLength": 1,
                        "default": "Reweet",
                        "title": "Label on issues that are retweets"
                    },
                    "ready": {
                        "type": "string",
                        "minLength": 1,
                        "default": "ready",
                        "title": "Label on issues that can be tweeted"
                    },
                    "invalid": {
                        "type": "string",
                        "minLength": 1,
                        "default": "invalid",
                        "title": "Label on issues that can not be tweeted"
                    }
                },
                "additionalProperties": false
            },
            "schedulingTime": {
                "type": "object",
                "description": "If left out the dates for scheduling will not work, but the configuration is not required",
                "properties": {
                    "format": {
                        "type": "string",
                        "pattern": "[YMDHmTZ :.-]+"
                    },
                    "timezone": {
                        "type": "number",
                        "minimum": -11,
                        "maximum": 13,
                        "title": "Offset to UTC of dates in issues"
                    }
                },
                "required": [
                    "format",
                    "timezone"
                ],
                "additionalProperties": false
            },
            "twitter": {
                "type": "object",
                "patternProperties": {
                    "^(consumer_(key|secret)|access_token_(key|secret))$": {
                        "type": "string",
                        "minLength": 3
                    }
                },
                "required": [
                    "consumer_key",
                    "consumer_secret",
                    "access_token_key",
                    "access_token_secret"
                ],
                "additionalProperties": false
            },
            "sources": {
                "type": "object",
                "patternProperties": {
                    "^(issues|mentions|tweeting)$": {
                        "type": "object",
                        "properties": {
                            "columns": {
                                "type": "object",
                                "patternProperties": {
                                    "^(source|target)$": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "required": [
            "repo",
            "githubToken",
            "projectName",
            "twitter"
        ],
        "additionalProperties": false
    }
}
